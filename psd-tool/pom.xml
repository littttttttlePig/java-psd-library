<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <artifactId>psd-tool</artifactId>
    <version>2.1-SNAPSHOT</version>
    <parent>
         <groupId>psd-library</groupId>
        <artifactId>psd-library-parent</artifactId>
        <version>2.1.SNAPSHOT</version>
    </parent>
    <build>
        <sourceDirectory>src</sourceDirectory>
        <plugins>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.6</source>
                    <target>1.6</target>
                </configuration>
            </plugin>
            <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-shade-plugin</artifactId>
        <version>1.4</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
                  <mainClass>psdtool.UiLauncher</mainClass>
                </transformer>
              </transformers>
              <artifactSet>
                <includes>
                    <include>psd-library:psd-image</include>
                    <include>psd-library:psd-parser</include>
                 </includes>
              </artifactSet>
            </configuration>
          </execution>
        </executions>
      </plugin>
        </plugins>
    </build>
    <dependencies>
        <dependency>
            <groupId>psd-library</groupId>
            <artifactId>psd-image</artifactId>
            <version>${project.version}</version>
        </dependency>
    </dependencies>
</project>
